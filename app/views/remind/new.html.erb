
<% provide(:title, 'Remind') %>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:remind, url: remind_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>


      <%= f.submit "Remind", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>